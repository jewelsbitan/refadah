<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.refadah2.Activity"
    >

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:gravity="center_horizontal"
     tools:layout_editor_absoluteX="0dp"
     tools:layout_editor_absoluteY="0dp">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:gravity="center_horizontal"
      android:text="@string/please"
      android:textColor="#cc0000"
      android:textSize="20dp" />

  <EditText
      android:id="@+id/editText"
      android:layout_width="335dp"
      android:layout_height="61dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="109dp"
      android:ems="10"
      android:hint="@string/Name"
      android:inputType="textPersonName" />

  <EditText
      android:id="@+id/editText2"
      android:layout_width="337dp"
      android:layout_height="59dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="201dp"
      android:ems="10"
      android:hint="@string/Card"
      android:inputType="number" />

  <EditText
      android:id="@+id/editText4"
      android:layout_width="45dp"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/editText6"
      android:layout_alignBottom="@+id/editText6"
      android:layout_toEndOf="@+id/textView6"
      android:layout_toRightOf="@+id/textView6"
      android:ems="10"
      android:inputType="number" />

  <EditText
      android:id="@+id/editText5"
      android:layout_width="36dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="309dp"
      android:layout_marginTop="299dp"
      android:ems="10"
      android:inputType="number" />

  <EditText
      android:id="@+id/editText6"
      android:layout_width="36dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="260dp"
      android:layout_marginTop="299dp"
      android:ems="10"
      android:inputType="number" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="14dp"
      android:layout_height="43dp"
      android:layout_marginLeft="300dp"
      android:layout_marginTop="299dp"
      android:text="/"
      android:textSize="13pt"
      tools:layout_editor_absoluteX="313dp"
      tools:layout_editor_absoluteY="309dp" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_alignBottom="@+id/editText6"
      android:layout_alignLeft="@+id/textView8"
      android:layout_alignStart="@+id/textView8"
      android:layout_marginLeft="19dp"
      android:layout_marginStart="19dp"
      android:text="@string/CVV"
      android:textSize="10pt"
      tools:layout_editor_absoluteX="38dp"
      tools:layout_editor_absoluteY="314dp" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="42dp"
      android:layout_alignBottom="@+id/textView6"
      android:layout_alignLeft="@+id/button"
      android:layout_alignStart="@+id/button"
      android:text="@string/EXP"
      android:textSize="10pt"
      tools:layout_editor_absoluteX="210dp"
      tools:layout_editor_absoluteY="312dp" />

  <Button
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="200dp"
      android:layout_marginTop="402dp"
      android:background="#fadd64"
      android:fontFamily="sans-serif"
      android:onClick="Confirm"
      android:text="@string/Confirm"

      />

  <Button
      android:id="@+id/button3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="70dp"
      android:layout_marginTop="402dp"
      android:background="#fadd64"
      android:fontFamily="sans-serif"
      android:onClick="cancel"
      android:text="@string/Cancle" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="190dp"
      android:layout_height="36dp"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="78dp" />


 </RelativeLayout>

</android.support.constraint.ConstraintLayout>
