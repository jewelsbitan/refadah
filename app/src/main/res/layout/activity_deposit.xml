<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"

    tools:context="com.example.android.refadah2.depositActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:textColor="#cc0000"
android:layout_marginTop="8dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/note"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="102dp"
            android:textSize="22dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/numberOfArrows"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"

                android:inputType="numberSigned"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="366dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numOfArrowT"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="379dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/resultText"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textSize="25dp"

                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="425dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priceT"
                android:textSize="25dp"

                tools:layout_editor_absoluteX="283dp"
                tools:layout_editor_absoluteY="438dp" />



        </LinearLayout>

        <Button

            android:id="@+id/button2"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:onClick="showPrice"
            android:text="@string/showPB"
            android:background="#fadd64"
            android:layout_width="180dp"
            android:layout_marginTop="32dp"
            android:fontFamily="Roboto-Thin italic"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginBottom="14dp"
            />

        <Button
            android:id="@+id/buttonn"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/nextB"
            android:background="#fadd64"
            android:layout_width="180dp"
            android:fontFamily="Roboto-Thin italic"
            android:textSize="20dp"
            android:onClick="next"
            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
