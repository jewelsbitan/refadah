<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.refadah2.home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/logo" />


        <Button
            android:id="@+id/hj"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/aboutUs"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="152dp"
            android:background="#fadd64"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/buttonP"
            android:textSize="30dp" />


        <Button
            android:id="@+id/mo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hj"
            android:layout_alignLeft="@+id/hj"
            android:layout_alignStart="@+id/hj"
            android:layout_marginBottom="39dp"
            android:background="#fadd64"
            android:fontFamily="sans-serif"
            android:onClick="mo"
            android:text="@string/buttonM"
            android:textSize="30dp" />


        <Button
            android:id="@+id/aboutUs"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:fontFamily="Roboto-Thin italic"
            android:gravity="center_horizontal"
            android:onClick="aboutUs"
            android:text="@string/aboutB"
            android:textSize="25dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>